<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.xepozz.fs_info</id>
    <name>FileSystem Info</name>
    <vendor email="xepozz@list.ru" url="https://github.com/xepozz">Dmitrii Derepko (@xepozz)</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.FsInfoBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <projectViewNodeDecorator implementation="com.github.xepozz.fs_info.FileNodeDecorator" order="first"/>
        <postStartupActivity implementation="com.github.xepozz.fs_info.StartupListener" order="first"/>
    </extensions>

    <projectListeners>
        <listener
                activeInTestMode="false"
                activeInHeadlessMode="false"
                topic="com.intellij.openapi.vcs.FileStatusListener"
                class="com.github.xepozz.fs_info.FileStatusListener"/>
    </projectListeners>

    <actions>
        <group id="ProjectView.FileSystem" text="File System Info" popup="true">
            <action id="ProjectView.FileSystem.ToggleEnabledAction"
                    class="com.github.xepozz.fs_info.actions.ToggleEnabledAction"
                    text="Enabled"
                    description="Enables or disables printing the information">
            </action>
            <action id="ProjectView.FileSystem.ToggleBytesAction"
                    class="com.github.xepozz.fs_info.actions.ToggleBytesAction"
                    text="Show Bytes"
                    description="Show bytes descriptor">
            </action>
            <action id="ProjectView.FileSystem.ToggleKBytesAction"
                    class="com.github.xepozz.fs_info.actions.ToggleKBytesAction"
                    text="Show KBytes"
                    description="Show kilobytes descriptor">
            </action>
            <action id="ProjectView.FileSystem.ToggleMBytesAction"
                    class="com.github.xepozz.fs_info.actions.ToggleMBytesAction"
                    text="Show MBytes"
                    description="Show megabytes descriptor">
            </action>
            <action id="ProjectView.FileSystem.ToggleGBytesAction"
                    class="com.github.xepozz.fs_info.actions.ToggleGBytesAction"
                    text="Show GBytes"
                    description="Show gigabytes descriptor">
            </action>
            <action id="ProjectView.FileSystem.ToggleLinesAction"
                    class="com.github.xepozz.fs_info.actions.ToggleLinesAction"
                    text="Show File Lines"
                    description="Show file lines descriptor">
            </action>
            <action id="ProjectView.FileSystem.ToggleDirectoryItemsAction"
                    class="com.github.xepozz.fs_info.actions.ToggleDirectoryItemsAction"
                    text="Show Directory Items Size"
                    description="Show directory items descriptor">
            </action>
            <action id="ProjectView.FileSystem.ToggleDirectorySizeAction"
                    class="com.github.xepozz.fs_info.actions.ToggleDirectorySizeAction"
                    text="Show Directory Size"
                    description="Show directory items descriptor">
            </action>
            <add-to-group
                    group-id="ProjectView.ToolWindow.SecondaryActions"
                    relative-to-action="ProjectView.ToolWindow.Sort.Actions"
                    anchor="after"
            />
        </group>
    </actions>
</idea-plugin>
